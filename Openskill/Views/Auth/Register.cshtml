@model Openskill.Models.Auth.AuthRegisterModel
@{
    Layout = "_AuthLayout";
}

<section class="d-flex justify-content-center">
    <form style="width: 22rem;" method="post" asp-controller="Auth" asp-action="Register" asp-route-returnurl="@ViewBag.ReturnUrl">
        <div class="input-group d-flex justify-content-center mb-5 mt-2">
            <img src="~/img/logo.png" width="300" />
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">F</span>
            <input type="text" asp-for="Firstname" class="form-control" placeholder="Введите имя" aria-label="firstname" aria-describedby="basic-addon1">
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">L</span>
            <input type="text" asp-for="Lastname" class="form-control" placeholder="Введите фамилию" aria-label="lastname" aria-describedby="basic-addon1">
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">E</span>
            <input type="email" asp-for="Email" class="form-control" placeholder="Введите почту" aria-label="Email" aria-describedby="basic-addon1">
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">P</span>
            <input type="password" asp-for="Password" class="form-control" placeholder="Введите пароль" aria-label="Email" aria-describedby="basic-addon1">
        </div>

        <div class="input-group">
            <button class="btn btn-primary w-100">Зарегестрироваться</button>
        </div>
    </form>
</section>