@model Openskill.ViewModels.Track.TrackIndexViewModel

<style>
    .basis-65 {
        flex-basis: 65%;
    }
    
    .basis-35 {
        flex-basis: 35%;
    }

    .btn-style {
        word-wrap: break-word;
        padding-bottom: 6px;
        padding-left: 12px;
        padding-right: 12px;
        padding-top: 6px
    }
</style>

<div class="mt-5">

    <div class="container d-flex justify-content-center">

        @foreach(var track in Model.Tracks)
        {
            <div class="card m-4" style="width: 18rem;">
              <img class="card-img-top" src="~/img/girl-preview.jpg" alt="Card image cap">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">@track.Title</h5>
                <p class="card-text">@Html.Raw(track.Description.Split("<br><br>")[0])</p>
                <a asp-controller="track" asp-action="info" asp-route-id="@track.Id" class="btn btn-style align-self-start mt-auto" style="background-color: #f1bc31;">Перейти</a>
              </div>
            </div>
        }

    </div>

    <div class="mt-5 mb-5">
        <div class="text-center">
            <div style="color: white;background-color: black;font-size: 28px;">
                <span>Дополнительные треки</span>
            </div>
        </div>
    </div>

    <div class="container d-flex flex-column">

        @foreach(var track in Model.AdditionalTracks)
        {
            <div class="card mb-3">
              <img class="card-img-top" src="~/img/girl-preview.jpg" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title">@track.Title</h5>
                <p class="card-text">@track.Description</p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
              </div>
            </div>
        }

    </div>


</div>